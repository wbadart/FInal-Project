# Add PANDA_LIB and PANDA_CPATH environment variables
PANDA_LIB=/home/mara/Documents/2015-16/OpenGL/panda3d-1.9.2/built/lib
PANDA_CPATH=/home/mara/Documents/2015-16/OpenGL/panda3d-1.9.2/built/include

all: main.o Game.o
	g++ $^ -o a.out -fPIC -L$(PANDA_LIB) -lp3framework -lpanda -lpandafx -lpandaexpress -lp3dtoolconfig -lp3dtool -lp3pystub -lp3direct -lpthread

%.o: %.cpp
	g++ -c $< -o $@ -fPIC -O0 -ggdb3 --std=gnu++11 -I$(PANDA_CPATH):/usr/include/python2.7

clean:
	rm *.o *.out
